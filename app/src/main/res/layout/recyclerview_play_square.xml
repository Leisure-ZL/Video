<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <VideoView
        android:id="@+id/p_s_videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/p_s_startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:src="@drawable/z1973"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/p_s_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:src="@drawable/z1974"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/p_s_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/z1977" />

        <TextView
            android:id="@+id/p_s_c_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《合集标题》"
            android:textColor="#FFE048" />

        <TextView
            android:id="@+id/p_s_c_esp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第3集|选集"
            android:textColor="#FFE048" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/p_s_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/p_s_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/p_s_u_headImg"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/head_test" />

        <TextView
            android:id="@+id/p_s_u_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/p_s_content"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/p_s_collection"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:text="#话题字段  作品标题文字， #话题字段
此处标题最多48字。此处标题最多48
字段。@用户昵称TWO"
        android:textSize="15sp" />


    <LinearLayout
        android:id="@+id/p_s_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/p_s_user"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/z139" />

        <TextView
            android:id="@+id/p_s_l_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="尊悦府邸|渝北区"
            android:textSize="12dp" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/p_s_right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/p_s_right2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:background="#00000000"
        android:src="@drawable/z1757" />

    <ImageButton
        android:id="@+id/p_s_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/p_s_right3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:background="#00000000"
        android:src="@drawable/z1759" />

    <ImageButton
        android:id="@+id/p_s_right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/p_s_right4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:background="#00000000"
        android:src="@drawable/z1760" />

    <ImageButton
        android:id="@+id/p_s_right4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="#00000000"
        android:src="@drawable/z1758" />


</RelativeLayout>