<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".play.PlayFragment"
    android:paddingBottom="50dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/play_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/z1754"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/play_tab_layout"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_height="60dp"
                app:tabGravity="fill"
                app:tabSelectedTextColor="@color/white"
                android:background="@color/trans"
                app:tabIndicator="@drawable/l871"
                app:tabIndicatorColor="#CFA174"
                app:tabIndicatorFullWidth="false"
                app:tabTextColor="#99FFFFFF"/>

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/z1756"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


</RelativeLayout>
